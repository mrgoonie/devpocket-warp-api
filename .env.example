# Application Configuration
NODE_ENV=development
PORT=8000
HOST=0.0.0.0
APP_NAME=DevPocket API

# Database Configuration (PostgreSQL with Prisma)
DATABASE_URL="postgresql://devpocket:devpocket_password@localhost:5432/devpocket_server?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES_IN=1h
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Service Configuration (Resend)
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=noreply@devpocket.app
SUPPORT_EMAIL=support@devpocket.app

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://devpocket.app,https://app.devpocket.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Kubernetes Configuration
KUBECONFIG_PATH=/path/to/kubeconfig
DEFAULT_NAMESPACE=devpocket-environments
CLUSTER_NAME=default-cluster

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS_PER_USER=10

# Environment Template Configuration
TEMPLATE_STORAGE_PATH=./templates
DEFAULT_TEMPLATE_RESOURCES_CPU=500m
DEFAULT_TEMPLATE_RESOURCES_MEMORY=1Gi
DEFAULT_TEMPLATE_RESOURCES_STORAGE=10Gi

# Container/Environment Configuration
CONTAINER_REGISTRY=docker.io
CONTAINER_CPU_LIMIT=1000m
CONTAINER_MEMORY_LIMIT=2Gi
CONTAINER_STORAGE_LIMIT=10Gi

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
BCRYPT_ROUNDS=12
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=900000

# Subscription Plans Configuration
FREE_PLAN_MAX_ENVIRONMENTS=1
STARTER_PLAN_MAX_ENVIRONMENTS=3
PRO_PLAN_MAX_ENVIRONMENTS=10

# Development Configuration
DEBUG=false
ENABLE_API_DOCS=true

# Encryption Configuration
SECRET_KEY=your-secure-secret-key-32-characters-minimum
