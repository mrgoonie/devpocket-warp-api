# Database Configuration
DATABASE_URL=postgresql://devpocket_user:devpocket_password@localhost:5432/devpocket_warp_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=devpocket_warp_dev
DATABASE_USER=devpocket_user
DATABASE_PASSWORD=devpocket_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-minimum-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=30

# Application Configuration
APP_NAME=DevPocket API
APP_VERSION=1.0.0
APP_DEBUG=False
APP_HOST=0.0.0.0
APP_PORT=8000

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "https://devpocket.app"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH"]
CORS_ALLOW_HEADERS=["*"]

# OpenRouter Configuration (BYOK - Bring Your Own Key)
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_SITE_URL=https://devpocket.app
OPENROUTER_APP_NAME=DevPocket

# Security Configuration
BCRYPT_ROUNDS=12
MAX_CONNECTIONS_PER_IP=100
RATE_LIMIT_PER_MINUTE=60

# SSH Configuration
SSH_TIMEOUT=30
SSH_MAX_CONNECTIONS=10
SSH_KEY_STORAGE_PATH=./ssh_keys

# Terminal Configuration
TERMINAL_TIMEOUT=300
MAX_COMMAND_LENGTH=1000
MAX_OUTPUT_SIZE=1048576  # 1MB

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development Settings
RELOAD=True
WORKERS=1

# Production Settings (override in production)
# RELOAD=False
# WORKERS=4
# APP_DEBUG=False
