        result = await self.session.execute(
            select(SSHProfile)
            .where(
                and_(
                    SSHProfile.user_id == user_id,
                    or_(
                        SSHProfile.name.ilike(search_pattern),
                        SSHProfile.host.ilike(search_pattern),
