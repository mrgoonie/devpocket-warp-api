    # Add parallel execution
    if [[ "$parallel" == true ]]; then
        # Use number of CPU cores
        local num_cores=$(nproc 2>/dev/null || sysctl -n hw.ncpu 2>/dev/null || echo 4)
        pytest_cmd="$pytest_cmd -n $num_cores"
