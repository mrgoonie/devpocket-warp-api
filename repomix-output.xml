        success = result["status"] == "healthy"
        if success:
            print(f"‚úÖ Database health: {result}")
        else:
            print(f"‚ùå Database health: {result}")
    elif command == "reset":
        success = await reset_database()
    else:
        print(f"‚ùå Unknown command: {command}")
        return 1

    if success:
        print(f"‚úÖ Command '{command}' completed successfully")
        return 0
    else:
        print(f"‚ùå Command '{command}' failed")
        return 1


if __name__ == "__main__":
